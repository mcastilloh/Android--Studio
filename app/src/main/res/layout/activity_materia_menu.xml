<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MateriaMenuAct">

    <Button
        android:id="@+id/btn_insertar_materia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insertar Materia"
        android:layout_marginBottom="600dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_consultar_materia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar Materia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_insertar_materia" />

    <Button
        android:id="@+id/btn_modificar_materia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modificar Materia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_consultar_materia" />

    <Button
        android:id="@+id/btn_eliminar_materia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Materia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_modificar_materia" />

</androidx.constraintlayout.widget.ConstraintLayout>